@model HRM.Data.Models.AppUser
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<form asp-controller="Home" asp-action="Login">
    <div class="form-group col-sm-6">
        <label for="Email">Username</label>
        <input type="text" class="form-control" id="Email" asp-for="Email" placeholder="Enter username">
    </div>
    <div class="form-group col-sm-6">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Enter password">
    </div>
    <div class="form-group col-sm-6">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
